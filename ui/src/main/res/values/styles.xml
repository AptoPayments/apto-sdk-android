<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        DARK
    -->

    <!-- Generic -->
    <style name="llsdk_user_data_entry_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@+id/abl_toolbar_wrapper</item>
        <item name="android:layout_above">@+id/tv_next_bttn</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="llsdk_plain_text_link">
        <item name="android:textColor">@color/llsdk_link_color</item>
    </style>

    <style name="llsdk_horizontal_hairline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/llsdk_hairline_color</item>
    </style>

    <style name="llsdk_lender_logo">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/llsdk_dark_text_color_hint</item>
    </style>

    <!-- Terms -->
    <style name="llsdk_terms_disclaimer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/llsdk_dark_text_color_hint</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Amount inputs -->
    <style name="llsdk_value_slider_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Credit Score -->
    <style name="llsdk_credit_score_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
    </style>

    <!-- ID Verification -->
    <style name="llsdk_id_verification_text_input_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="llsdk_id_verification_disclaimer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="llsdk_id_verification_terms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="llsdk_id_verification_next_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/llsdk_dark_text_color</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <!-- Loan offers -->
    <style name="llsdk_loan_offer_summary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="llsdk_loan_offer_summary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/llsdk_offer_summary_body_text_size</item>
    </style>
    <style name="llsdk_loan_offer_summary_header" parent="llsdk_loan_offer_summary_text">
        <item name="android:textSize">@dimen/llsdk_offer_summary_header_size</item>
    </style>
    <style name="llsdk_loan_offer_summary_apply_button" parent="llsdk_loan_offer_summary_text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="llsdk_loan_offer_summary_image" parent="llsdk_lender_logo">
        <item name="android:layout_width">@dimen/llsdk_offer_summary_image_width</item>
        <item name="android:layout_height">@dimen/llsdk_offer_summary_image_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <!-- Loan agreement -->
    <style name="llsdk_loan_agreement_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="llsdk_loan_agreement_section_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/llsdk_terms_section_header_text_size</item>
    </style>

    <style name="llsdk_loan_agreement_summary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/llsdk_terms_title_text_size</item>
    </style>

    <style name="llsdk_loan_agreement_summary_values" parent="llsdk_loan_agreement_summary_text">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!--
        LIGHT
    -->

    <style name="llsdk_id_verification_text_input_base_light" parent="llsdk_id_verification_text_input_base">
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <style name="llsdk_id_verification_next_button_light" parent="llsdk_id_verification_next_button">
        <item name="android:background">@color/llsdk_dark_text_color_hint</item>
        <item name="android:textColor">@color/llsdk_dark_text_color</item>
        <item name="android:clickable">true</item>
    </style>

    <!--
        BLUE
    -->

    <style name="llsdk_user_data_next_button_blue" parent="llsdk_id_verification_next_button_light">
        <item name="android:background">@color/llsdk_blue_primary_dark</item>
    </style>

    <style name="llsdk_plain_text_link_blue" parent="llsdk_plain_text_link">
        <item name="android:textColor">@color/llsdk_blue_primary</item>
    </style>

    <style name="llsdk_value_slider_header_blue" parent="llsdk_value_slider_header">
        <item name="android:textColor">@color/llsdk_blue_primary_dark</item>
    </style>

    <style name="llsdk_discrete_seek_bar_blue">
        <item name="dsb_progressColor">@color/llsdk_blue_primary_dark</item>
        <item name="dsb_indicatorColor">@color/llsdk_blue_primary</item>
        <item name="dsb_rippleColor">@color/llsdk_blue_dsb_ripple</item>
    </style>

    <style name="llsdk_loan_offer_summary_blue" parent="llsdk_loan_offer_summary">
        <item name="cardBackgroundColor">@color/llsdk_blue_loan_offers_card_background</item>
    </style>

    <style name="llsdk_loan_offer_summary_header_blue" parent="llsdk_loan_offer_summary_header">
        <item name="android:textColor">@color/llsdk_dark_text_color_hint</item>
    </style>

    <style name="llsdk_loan_offer_summary_text_blue" parent="llsdk_loan_offer_summary_text">
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <style name="llsdk_loan_offer_summary_apply_button_blue" parent="llsdk_loan_offer_summary_apply_button">
        <item name="android:textColor">@color/llsdk_blue_primary</item>
    </style>

    <style name="llsdk_loan_offer_summary_image_blue" parent="llsdk_loan_offer_summary_image">
        <item name="android:background">@color/llsdk_blue_lender_image_background</item>
    </style>

</resources>
