<?xml version="1.0" encoding="utf-8"?>
<me.ledge.link.sdk.ui.views.userdata.IdentityVerificationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/include_llsdk_toolbar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    <ScrollView
            style="?attr/llsdk_dataContainerStyle"
            android:scrollbarStyle="outsideOverlay">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/rl_birthday_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/abl_toolbar_wrapper">

                <Button
                        android:id="@+id/btn_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignTop="@+id/til_birthday"
                        android:layout_alignBottom="@+id/til_birthday"
                        android:background="@android:color/transparent" />

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_birthday"
                        style="?attr/llsdk_idVerification_inputWrapperStyle"
                        android:theme="?attr/llsdk_idVerification_inputWrapperTheme"
                        android:nextFocusUp="@id/til_birthday"
                        android:nextFocusLeft="@id/til_birthday">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_birthday"
                            style="?attr/llsdk_idVerification_editTextStyle"
                            android:inputType="date"
                            android:singleLine="true"
                            android:hint="@string/id_verification_birthday_hint" />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_social_security"
                    style="?attr/llsdk_idVerification_inputWrapperStyle"
                    android:theme="?attr/llsdk_idVerification_inputWrapperTheme"
                    android:layout_below="@+id/rl_birthday_holder">

                <me.ledge.link.sdk.ui.widgets.SsnEditText
                        android:id="@+id/et_social_security"
                        style="?attr/llsdk_idVerification_editTextStyle"
                        android:hint="@string/id_verification_social_security_hint" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_ssn_itin_not_available_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/til_social_security">

                <CheckBox
                    android:id="@+id/cb_ssn_itin_not_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_ssn_itin_not_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/id_verification_ssn_itin_not_available" />

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_next_bttn"
                    style="?attr/llsdk_bigButtonStyle"
                    android:layout_below="@+id/ll_ssn_itin_not_available_holder"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/id_verification_button_next" />

            <TextView
                    android:id="@+id/tv_security"
                    style="?attr/llsdk_idVerification_disclaimerStyle"
                    android:layout_below="@+id/tv_next_bttn"
                    android:layout_centerHorizontal="true"
                    android:text="@string/id_verification_disclaimer" />

            <TextView
                    android:id="@+id/tv_disclaimers_header"
                    style="?attr/llsdk_idVerification_disclaimerStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/tv_security"
                    android:visibility="gone"
                    android:text="@string/id_verification_disclosures_label" />

            <TextView
                    android:id="@+id/tv_disclaimers_body"
                    style="?attr/llsdk_idVerification_disclaimerStyle"
                    android:autoLink="web"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="48dp"
                    android:layout_below="@+id/tv_disclaimers_header" />

        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/include_progress_bar" />
    <include layout="@layout/include_rl_loading" />

</me.ledge.link.sdk.ui.views.userdata.IdentityVerificationView>
