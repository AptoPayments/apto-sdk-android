<?xml version="1.0" encoding="utf-8"?>
<me.ledge.link.sdk.ui.views.DisclaimerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_buttons_holder"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel_pdf"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_toLeftOf="@+id/tv_accept_pdf"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/disclaimer_cancel" />

            <TextView
                android:id="@+id/tv_accept_pdf"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/disclaimer_accept" />
        </RelativeLayout>

        <WebView
            android:id="@+id/wb_pdf_webview"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@id/ll_buttons_holder"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tv_disclaimer_text"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@id/ll_buttons_holder"
            style="?attr/llsdk_terms_disclaimerStyle" />

        <us.feras.mdv.MarkdownView
            android:id="@+id/md_disclaimer_markdown"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@id/ll_buttons_holder"
            style="?attr/llsdk_terms_disclaimerStyle" />
    </RelativeLayout>
</me.ledge.link.sdk.ui.views.DisclaimerView>