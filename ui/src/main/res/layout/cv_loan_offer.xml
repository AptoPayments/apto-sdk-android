<?xml version="1.0" encoding="utf-8"?>
<me.ledge.link.sdk.ui.views.offers.OfferListSummaryView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cv="http://schemas.android.com/apk/res-auto"
        style="?attr/llsdk_loanOfferSummary_cardStyle"
        cv:cardCornerRadius="4dp"
        cv:cardElevation="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/ll_summary"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_lender_logo"
                    android:layout_toStartOf="@+id/iv_lender_logo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                <TextView
                        android:id="@+id/tv_lender"
                        android:paddingBottom="2dp"
                        style="?attr/llsdk_loanOfferSummary_headerStyle" />

                <TextView
                        android:id="@+id/tv_interest"
                        style="?attr/llsdk_loanOfferSummary_textStyle" />

                <TextView
                        android:id="@+id/tv_amount"
                        style="?attr/llsdk_loanOfferSummary_textStyle" />

                <TextView
                        android:id="@+id/tv_monthly"
                        style="?attr/llsdk_loanOfferSummary_textStyle" />

                <TextView
                    android:id="@+id/tv_disclaimer"
                    android:visibility="gone"
                    style="@style/llsdk_terms_disclaimer" />

            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_lender_logo"
                    style="?attr/llsdk_loanOfferSummary_imageStyle" />

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_bttn_more_info"
                    style="?attr/llsdk_loanOfferSummary_buttonStyle"
                    android:textColor="@color/llsdk_application_pending_lender_action_color"
                    android:text="@string/offers_list_summary_button_more_info" />

            <TextView
                    android:id="@+id/tv_apply"
                    style="?attr/llsdk_loanOfferSummary_buttonStyle"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/offers_list_summary_button_apply" />

        </LinearLayout>
    </LinearLayout>
</me.ledge.link.sdk.ui.views.offers.OfferListSummaryView>
