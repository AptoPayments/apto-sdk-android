<?xml version="1.0" encoding="utf-8"?>
<me.ledge.link.sdk.ui.views.offers.OfferSummaryView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cv="http://schemas.android.com/apk/res-auto"
        style="@style/llsdk_loan_offer_summary"
        cv:cardCornerRadius="4dp"
        cv:cardElevation="2dp">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_lender_logo"
            android:layout_toStartOf="@+id/iv_lender_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                    android:id="@+id/tv_lender"
                    style="@style/llsdk_loan_offer_summary_header" />

            <TextView
                    android:id="@+id/tv_interest"
                    style="@style/llsdk_loan_offer_summary_text" />

            <TextView
                    android:id="@+id/tv_amount"
                    style="@style/llsdk_loan_offer_summary_text" />

            <TextView
                    android:id="@+id/tv_monthly"
                    style="@style/llsdk_loan_offer_summary_text" />

            <TextView
                    android:id="@+id/tv_apply"
                    style="@style/llsdk_loan_offer_summary_apply_button"
                    android:text="@string/offers_list_summary_button_apply" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lender_logo"
            style="@style/llsdk_loan_offer_summary_image" />

    </RelativeLayout>
</me.ledge.link.sdk.ui.views.offers.OfferSummaryView>
