<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
            name="Theme.LedgeLine.Sdk"
            parent="@style/Theme.AppCompat.NoActionBar">

        <item name="llsdk_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="llsdk_toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="llsdk_nextButtonStyle">@style/llsdk_user_details_next_button</item>

        <item name="llsdk_userDetails_inputWrapperTheme">@style/Theme.LedgeLine.Sdk.TextInput</item>
        <item name="llsdk_userDetails_inputWrapperStyle">@style/llsdk_user_details_text_input_base</item>
        <item name="llsdk_userDetails_editTextStyle">@style/llsdk_user_details_text_input_base</item>
        <item name="llsdk_userDetails_disclaimerStyle">@style/llsdk_user_details_disclaimer</item>
        <item name="llsdk_userDetails_termsStyle">@style/llsdk_user_details_terms</item>
    </style>

    <style
            name="Theme.LedgeLine.Sdk.Light"
            parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>

        <item name="llsdk_toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="llsdk_toolbarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="llsdk_nextButtonStyle">@style/llsdk_user_details_next_button_light</item>

        <item name="llsdk_userDetails_inputWrapperTheme">@style/Theme.LedgeLine.Sdk.Light.TextInput</item>
        <item name="llsdk_userDetails_inputWrapperStyle">@style/llsdk_user_details_text_input_base</item>
        <item name="llsdk_userDetails_editTextStyle">@style/llsdk_user_details_text_input_base_light</item>
        <item name="llsdk_userDetails_disclaimerStyle">@style/llsdk_user_details_disclaimer</item>
        <item name="llsdk_userDetails_termsStyle">@style/llsdk_user_details_terms</item>
    </style>

    <style
            name="Theme.LedgeLine.Sdk.TextInput"
            parent="@style/Base.TextAppearance.AppCompat">

        <item name="android:textColor">@color/llsdk_dark_text_color</item>
        <item name="android:textColorHint">@color/llsdk_dark_text_color_hint</item>
    </style>
    <style
            name="Theme.LedgeLine.Sdk.Light.TextInput"
            parent="@style/Base.TextAppearance.AppCompat">

        <item name="android:textColor">@color/llsdk_light_text_color</item>
        <item name="android:textColorHint">@color/llsdk_dark_text_color_hint</item>
        <item name="colorControlNormal">@color/llsdk_dark_text_color_hint</item>
        <item name="colorControlActivated">@color/llsdk_light_control_activated</item>
        <item name="colorControlHighlight">@color/llsdk_light_control_activated</item>
    </style>
</resources>
