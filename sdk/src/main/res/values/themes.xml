<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
            name="Theme.LedgeLine.Sdk"
            parent="@style/Theme.AppCompat.NoActionBar">

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="nextButtonStyle">@style/user_details_next_button</item>

        <item name="userDetailsInputWrapperTheme">@style/Theme.LedgeLine.Sdk.TextInput</item>
        <item name="userDetailsInputWrapperStyle">@style/user_details_text_input_base</item>
        <item name="userDetailsEditTextStyle">@style/user_details_text_input_base</item>
        <item name="userDetailsDisclaimerStyle">@style/user_details_disclaimer</item>
        <item name="userDetailsTermsStyle">@style/user_details_terms</item>
    </style>

    <style
            name="Theme.LedgeLine.Sdk.Light"
            parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="nextButtonStyle">@style/user_details_next_button_light</item>

        <item name="userDetailsInputWrapperTheme">@style/Theme.LedgeLine.Sdk.Light.TextInput</item>
        <item name="userDetailsInputWrapperStyle">@style/user_details_text_input_base</item>
        <item name="userDetailsEditTextStyle">@style/user_details_text_input_base_light</item>
        <item name="userDetailsDisclaimerStyle">@style/user_details_disclaimer</item>
        <item name="userDetailsTermsStyle">@style/user_details_terms</item>
    </style>

    <style
            name="Theme.LedgeLine.Sdk.TextInput"
            parent="@style/Base.TextAppearance.AppCompat">

        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#777</item>
    </style>
    <style
            name="Theme.LedgeLine.Sdk.Light.TextInput"
            parent="@style/Base.TextAppearance.AppCompat">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#777</item>
        <item name="colorControlNormal">#777</item>
        <item name="colorControlActivated">#333</item>
        <item name="colorControlHighlight">#333</item>
    </style>
</resources>
