<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="me.ledge.link.sdk.example"
        android:versionCode="1"
        android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:label="@string/app_name"
            tools:replace="android:label"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name="me.ledge.link.sdk.example.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.TermsActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.LoanAmountActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.PersonalInformationActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.AddressActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.IncomeActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.handlers.eventbus.activities.userdata.EventBusIdentityVerificationActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.userdata.CreditScoreActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

        <activity
                android:name="me.ledge.link.sdk.ui.activities.offers.OffersListActivity"
                android:theme="@style/Theme.LedgeLine.Example" />

    </application>
</manifest>
