        <item name="android:background">@color/primary</item>
    </style>

    <style
            name="Theme.LedgeLine.Sdk.Example.Toolbar"
            parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:background">@color/primary</item>
    </style>

    <style
            name="Theme.LedgeLine.Example.TextInput"
            parent="Theme.LedgeLine.Sdk.Light.TextInput">

        <item name="colorControlActivated">@color/primaryDark</item>
