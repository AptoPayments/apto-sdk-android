        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="llsdk_toolbarTheme">@style/Theme.LedgeLink.Example.Toolbar</item>

        <item name="llsdk_bigButtonStyle">@style/llsdk_big_button_style_example</item>
