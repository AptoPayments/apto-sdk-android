<?xml version="1.0" encoding="utf-8"?>
<me.ledge.link.sdk.example.views.MainView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bttn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings_black_24dp"
        android:tint="@android:color/darker_gray"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="32dp">

            <Button
                android:id="@+id/bttn_get_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:visibility="gone"
                android:text="@string/main_button_offers_cta" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_project_summary"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_above="@+id/ll_buttons"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:layout_above="@id/tv_project_summary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <include layout="@layout/include_rl_loading" />
</me.ledge.link.sdk.example.views.MainView>
