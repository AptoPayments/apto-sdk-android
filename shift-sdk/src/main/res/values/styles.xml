<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        STEPPER
    -->
    <style name="llsdk_progress_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_below">@+id/abl_toolbar_wrapper</item>
    </style>
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionButtonStyle">@style/AppTheme.Toolbar.ActionButton</item>
    </style>
    <style name="Base.AppTheme.Toolbar.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="AppTheme.Toolbar.ActionButton" parent="@style/Base.AppTheme.Toolbar.ActionButton">
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="llsdk_stepper_button_holder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="llsdk_stepper_button_holder.right" parent="llsdk_stepper_button_holder">
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="llsdk_stepper_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/llsdk_stepper_textColor</item>
    </style>

    <style name="toolbar_button_next">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="llsdk_stepper_bar_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_toLeftOf">@+id/ll_next_button</item>
        <item name="android:layout_toStartOf">@+id/ll_next_button</item>
        <item name="android:gravity">center</item>
    </style>

    <!--
        DARK
    -->

    <!-- Generic -->
    <style name="llsdk_user_data_entry_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@+id/pbw_progress_bar_wrapper</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="llsdk_plain_text_link">
        <item name="android:textColor">@color/llsdk_link_color</item>
    </style>

    <style name="llsdk_horizontal_hairline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/llsdk_hairline_color</item>
    </style>

    <style name="llsdk_lender_logo">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/llsdk_lenderLogoBackground</item>
    </style>

    <style name="llsdk_big_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/llsdk_big_button_height</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/llsdk_dark_text_color</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <style name="llsdk_error_text" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/llsdk_error_text_color</item>
    </style>

    <!-- Terms -->
    <style name="llsdk_terms_disclaimer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/llsdk_dark_text_color_hint</item>
        <item name="android:textColorLink">@color/llsdk_link_color</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Amount inputs -->
    <style name="llsdk_value_slider_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Credit Score -->
    <style name="llsdk_credit_score_radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
    </style>

    <!-- ID Verification -->
    <style name="llsdk_id_verification_text_input_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/llsdk_text_color</item>
    </style>

    <style name="llsdk_id_verification_text_input_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/llsdk_hint_text_size</item>
        <item name="android:textColor">@color/llsdk_hint_text_color</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="llsdk_id_verification_disclaimer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorLink">@color/llsdk_link_color</item>
    </style>

    <style name="llsdk_id_verification_terms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="llsdk_id_verification_next_button" parent="llsdk_big_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="llsdk_birthdate_slash">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Loan offers -->
    <style name="llsdk_loan_offer_summary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="llsdk_loan_offer_summary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/llsdk_offer_summary_body_text_size</item>
    </style>
    <style name="llsdk_loan_offer_summary_header" parent="llsdk_loan_offer_summary_text">
        <item name="android:textSize">@dimen/llsdk_offer_summary_header_size</item>
    </style>
    <style name="llsdk_loan_offer_summary_apply_button" parent="llsdk_loan_offer_summary_text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="llsdk_loan_offer_summary_image" parent="llsdk_lender_logo">
        <item name="android:layout_width">@dimen/llsdk_offer_summary_image_width</item>
        <item name="android:layout_height">@dimen/llsdk_offer_summary_image_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="llsdk_loan_offer_carousel_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
    </style>
    <style name="llsdk_loan_offer_carousel_header" parent="llsdk_loan_offer_carousel_text">
        <item name="android:textSize">@dimen/llsdk_offer_summary_header_size</item>
    </style>

    <!-- Add documents -->
    <style name="llsdk_add_documents_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="llsdk_add_documents_card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_primary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_terms_title_text_size</item>
    </style>
    <style name="llsdk_add_documents_card_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/llsdk_tertiary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_offer_summary_body_text_size</item>
    </style>

    <style name="llsdk_add_documents_bottomsheet_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="llsdk_add_documents_bottomsheet_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">@dimen/llsdk_body_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Loan agreement -->
    <style name="llsdk_loan_agreement_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="llsdk_loan_agreement_section_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
        <item name="android:textSize">@dimen/llsdk_terms_section_header_text_size</item>
    </style>

    <style name="llsdk_loan_agreement_summary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/llsdk_terms_title_text_size</item>
    </style>

    <style name="llsdk_loan_agreement_summary_values" parent="llsdk_loan_agreement_summary_text">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <!-- Transaction details -->
    <style name="llsdk_transaction_details_card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_label_text_size</item>
    </style>
    <style name="llsdk_transaction_details_card_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/llsdk_light_text_color</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_label_text_size</item>
    </style>
    <style name="llsdk_transaction_details_detail_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/llsdk_secondary_text_color</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_header_text_size</item>
    </style>
    <style name="llsdk_transaction_details_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/llsdk_primary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_label_text_size</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="llsdk_transaction_details_detail_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_secondary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_description_text_size</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="llsdk_transaction_details_long_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_tertiary_text_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:textSize">@dimen/llsdk_transaction_details_long_text_size</item>
    </style>
    <style name="llsdk_transaction_details_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Manage card -->
    <style name="llsdk_manage_card_card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_primary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_title_text_size</item>
    </style>
    <style name="llsdk_manage_card_card_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_tertiary_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_description_text_size</item>
    </style>
    <style name="llsdk_manage_card_card_amount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_primary_text_color</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_small_amount_text_size</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="llsdk_manage_card_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_secondary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_section_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="llsdk_manage_card_big_amount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_primary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_big_amount_text_size</item>
    </style>
    <style name="llsdk_manage_card_subcurrency">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/llsdk_tertiary_text_color</item>
        <item name="android:textSize">@dimen/llsdk_manage_card_subcurrency_text_size</item>
    </style>

    <style name="llsdk_action_button_style" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:width">50dp</item>
    </style>

    <!--
        LIGHT
    -->

    <style name="llsdk_big_button_style_light" parent="llsdk_big_button_style">
        <item name="android:background">@color/llsdk_dark_text_color_hint</item>
        <item name="android:textColor">@color/llsdk_dark_text_color</item>
    </style>

    <style name="llsdk_id_verification_next_button_light" parent="llsdk_id_verification_next_button">
        <item name="android:background">@color/llsdk_dark_text_color_hint</item>
        <item name="android:textColor">@color/llsdk_dark_text_color</item>
        <item name="android:clickable">true</item>
    </style>

    <!--
        BLUE
    -->

    <style name="llsdk_big_button_style_blue" parent="llsdk_big_button_style_light">
        <item name="android:background">@color/llsdk_blue_primary_dark</item>
    </style>

    <style name="llsdk_user_data_next_button_blue" parent="llsdk_id_verification_next_button_light">
        <item name="android:background">@color/llsdk_blue_primary_dark</item>
    </style>

    <style name="llsdk_plain_text_link_blue" parent="llsdk_plain_text_link">
        <item name="android:textColor">@color/llsdk_blue_primary</item>
    </style>

    <style name="llsdk_terms_disclaimer_blue" parent="llsdk_terms_disclaimer">
        <item name="android:textColorLink">@color/llsdk_blue_primary</item>
    </style>

    <style name="llsdk_value_slider_header_blue" parent="llsdk_value_slider_header">
        <item name="android:textColor">@color/llsdk_blue_primary_dark</item>
    </style>

    <style name="llsdk_discrete_seek_bar_blue">
        <item name="dsb_progressColor">@color/llsdk_blue_primary_dark</item>
        <item name="dsb_indicatorColor">@color/llsdk_blue_primary</item>
        <item name="dsb_rippleColor">@color/llsdk_blue_dsb_ripple</item>
    </style>

    <style name="llsdk_id_verification_disclaimer_blue" parent="llsdk_id_verification_disclaimer">
        <item name="android:textColorLink">@color/llsdk_blue_primary</item>
    </style>

    <style name="llsdk_loan_offer_summary_blue" parent="llsdk_loan_offer_summary">
        <item name="cardBackgroundColor">@color/llsdk_blue_loan_offers_card_background</item>
    </style>

    <style name="llsdk_loan_offer_summary_header_blue" parent="llsdk_loan_offer_summary_header">
        <item name="android:textColor">@color/llsdk_dark_text_color_hint</item>
    </style>

    <style name="llsdk_loan_offer_summary_text_blue" parent="llsdk_loan_offer_summary_text">
        <item name="android:textColor">@color/llsdk_light_text_color</item>
    </style>

    <style name="llsdk_loan_offer_summary_apply_button_blue" parent="llsdk_loan_offer_summary_apply_button">
        <item name="android:textColor">@color/llsdk_blue_primary</item>
    </style>

    <style name="ledge_bottom_sheet_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:checked">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ledge_icon_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ledge_big_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingEnd">32dp</item>
