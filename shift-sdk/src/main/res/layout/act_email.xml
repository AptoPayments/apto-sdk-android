<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.userdata.EmailView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/tools">

    <include layout="@layout/include_llsdk_toolbar" />
    <include layout="@layout/include_progress_bar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        style="?attr/llsdk_dataContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_next_bttn"
        android:layout_below="@+id/abl_toolbar_wrapper"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            style="?attr/llsdk_idVerification_inputWrapperStyle"
            android:layout_marginTop="96dp"
            android:theme="?attr/llsdk_idVerification_inputWrapperTheme"
            android:hint="@string/email_label"
            android.support.design:hintEnabled="true"
            android.support.design:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_email"
                style="?attr/llsdk_idVerification_editTextStyle"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</com.shiftpayments.link.sdk.ui.views.userdata.EmailView>
