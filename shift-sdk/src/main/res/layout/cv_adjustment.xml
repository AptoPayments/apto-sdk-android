<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.card.AdjustmentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cv_adjustment_view"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_transfer_description"
            style="?attr/llsdk_transactionDetails_detailLabelTextStyle" />
        <TextView
            android:id="@+id/tv_transfer_id"
            style="?attr/llsdk_transactionDetails_detailValueLongTextStyle"
            android:layout_below="@+id/tv_transfer_description" />
        <TextView
            android:id="@+id/tv_transfer_exchange_rate"
            style="?attr/llsdk_transactionDetails_detailValueLongTextStyle"
            android:layout_below="@+id/tv_transfer_id" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_transfer_amount"
            android:layout_alignParentRight="true"
            style="?attr/llsdk_transactionDetails_detailValueTextStyle" />
    </RelativeLayout>
</com.shiftpayments.link.sdk.ui.views.card.AdjustmentView>