<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.card.AdjustmentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cv_adjustment_view"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_transfer_description"
            style="?attr/llsdk_transactionDetails_detailHeaderTextStyle" />
        <TextView
            android:id="@+id/tv_transfer_id"
            style="?attr/llsdk_transactionDetails_detailValueTextStyle"
            android:layout_below="@+id/tv_transfer_description"
            android:layout_alignLeft="@+id/tv_transfer_description" />
        <TextView
            android:id="@+id/tv_transfer_exchange_rate"
            style="?attr/llsdk_transactionDetails_detailValueTextStyle"
            android:layout_below="@+id/tv_transfer_id"
            android:layout_alignLeft="@+id/tv_transfer_description" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_transfer_amount"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/llsdk_transaction_details_title_text_size" />
    </RelativeLayout>
</com.shiftpayments.link.sdk.ui.views.card.AdjustmentView>