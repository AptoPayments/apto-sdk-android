<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_card_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_card_balance_label"
        android:layout_marginLeft="16dp"
        android:textSize="22sp"
        android:textColor="@color/llsdk_secondary_text_color"/>

    <TextView
        android:id="@+id/tv_card_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/card_management_card_balance"
        android:textColor="@color/llsdk_secondary_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_spendable_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_card_spendable_balance_label"
        android:layout_marginRight="16dp"
        android:textSize="22sp"
        android:textColor="@color/llsdk_secondary_text_color"/>

    <TextView
        android:id="@+id/tv_card_spendable_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/card_management_card_spendable_balance"
        android:textColor="@color/llsdk_secondary_text_color"
        android:textSize="12sp" />

    <com.shiftpayments.link.sdk.ui.views.card.CreditCardView
        android:id="@+id/credit_card_view"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_below="@id/tv_card_balance"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/tv_display_card_primary_bttn"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credit_card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/card_management_primary_button"
        android:textColor="@color/llsdk_tertiary_text_color"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_display_card_secondary_bttn"
        style="@style/ledge_big_button_style"
        android:layout_below="@+id/tv_display_card_primary_bttn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/card_management_secondary_button" />

    <TextView
        android:id="@+id/tv_transactions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_card_secondary_bttn"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:text="@string/card_management_transactions_title"
        android:textColor="@color/llsdk_secondary_text_color"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>