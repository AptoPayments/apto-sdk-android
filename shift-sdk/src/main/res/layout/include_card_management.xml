<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/include_invalid_funding_source_banner"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_empty_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_invalid_funding_source_banner">
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_current_balance_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/rl_empty_placeholder"
        style="@style/llsdk_manage_card_section_title"
        android:text="@string/card_management_card_balance" />

    <TextView
        android:id="@+id/tv_current_balance"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_current_balance_label"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        style="@style/llsdk_manage_card_big_amount" />

    <TextView
        android:id="@+id/tv_current_native_balance"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_current_balance"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        style="@style/llsdk_manage_card_subcurrency" />

    <TextView
        android:id="@+id/tv_card_spendable_balance_label"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/rl_empty_placeholder"
        style="@style/llsdk_manage_card_section_title"
        android:text="@string/card_management_card_spendable_balance" />

    <TextView
        android:id="@+id/tv_spendable_balance"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_card_spendable_balance_label"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        style="@style/llsdk_manage_card_big_amount" />

    <TextView
        android:id="@+id/tv_spendable_native_balance"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_spendable_balance"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        style="@style/llsdk_manage_card_subcurrency" />

    <com.shiftpayments.link.sdk.ui.views.card.CreditCardView
        android:id="@+id/credit_card_view"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_below="@id/tv_current_native_balance"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="21dp"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/tv_display_card_primary_bttn"
        style="@style/llsdk_instructions"
        android:layout_below="@+id/credit_card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/card_management_primary_button" />
</RelativeLayout>