<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.card.FundingSourceView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="64dp"
    android:layout_width="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_funding_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:id="@+id/ll_funding_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/rb_funding_source"
            android:layout_toStartOf="@id/rb_funding_source"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/llsdk_main_item_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_subtitle"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="32dp"
                    android:gravity="right"
                    style="?attr/llsdk_cardSettings_amountMediumStyle" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                style="@style/llsdk_manage_card_subcurrency" />
        </LinearLayout>

    </RelativeLayout>
</com.shiftpayments.link.sdk.ui.views.card.FundingSourceView>