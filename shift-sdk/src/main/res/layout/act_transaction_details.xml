<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.card.TransactionDetailsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mv_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                map:liteMode="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim_top"
                app:layout_collapseMode="pin"/>

            <View
                android:id="@+id/collapsing_toolbar_title_background_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_alignBottom="@+id/mv_header" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_direction_header"
                style="?attr/llsdk_transactionDetails_detailHeaderTextStyle"
                android:text="@string/transaction_details_direction" />

            <include layout="@layout/include_ll_transaction_address" />

            <TextView
                android:id="@+id/tv_details_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/llsdk_transaction_details_detail_header"
                android:layout_marginTop="12dp"
                android:text="@string/transaction_details_title" />

            <RelativeLayout
                android:id="@+id/rl_hold_amount"
                style="@style/llsdk_transaction_details_holder"
                android:visibility="gone">

                <View
                    android:id="@+id/strut_hold_amount"
                    style="@style/llsdk_strutStyle" />

                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_hold_amount"
                    android:text="@string/transaction_details_hold_amount" />

                <TextView
                    android:id="@+id/tv_hold_amount"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_hold_amount" />
            </RelativeLayout>

            <RelativeLayout style="@style/llsdk_transaction_details_holder">
                <TextView
                    android:id="@+id/tv_transaction_date_label"
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:text="@string/transaction_details_date" />

                <TextView
                    android:id="@+id/tv_transaction_date"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/tv_transaction_date_label" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_decline_reason"
                style="@style/llsdk_transaction_details_holder"
                android:visibility="gone">
                <View
                    android:id="@+id/strut_decline_reason"
                    style="@style/llsdk_strutStyle" />
                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_decline_reason"
                    android:text="@string/transaction_details_decline_reason" />
                <TextView
                    android:id="@+id/tv_transaction_decline_reason"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_decline_reason" />
            </RelativeLayout>

            <RelativeLayout style="@style/llsdk_transaction_details_holder">
                <TextView
                    android:id="@+id/tv_category_label"
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:text="@string/transaction_details_category" />
                <TextView
                    android:id="@+id/tv_transaction_category"
                    android:layout_below="@+id/tv_category_label"
                    style="?attr/llsdk_transactionDetails_detailValueLongTextStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fee_amount"
                style="@style/llsdk_transaction_details_holder"
                android:visibility="gone">

                <View
                    android:id="@+id/strut_fee_amount"
                    style="@style/llsdk_strutStyle" />

                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_fee_amount"
                    android:text="@string/transaction_details_fee_amount" />

                <TextView
                    android:id="@+id/tv_fee_amount"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_fee_amount" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cashback_amount"
                style="@style/llsdk_transaction_details_holder"
                android:visibility="gone">

                <View
                    android:id="@+id/strut_cashback_amount"
                    style="@style/llsdk_strutStyle" />

                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_cashback_amount"
                    android:text="@string/transaction_details_cashback_amount" />

                <TextView
                    android:id="@+id/tv_cashback_amount"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_cashback_amount" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_transaction_info_header"
                style="?attr/llsdk_transactionDetails_detailHeaderTextStyle"
                android:text="@string/transaction_details_transaction_info" />

            <RelativeLayout style="@style/llsdk_transaction_details_holder">

                <View
                    android:id="@+id/strut_type"
                    style="@style/llsdk_strutStyle" />

                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_type"
                    android:text="@string/transaction_details_type" />

                <TextView
                    android:id="@+id/tv_transaction_type"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_type" />
            </RelativeLayout>

            <RelativeLayout style="@style/llsdk_transaction_details_holder">
                <TextView
                    android:id="@+id/tv_shift_id_label"
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:text="@string/transaction_details_shift_id" />
                <TextView
                    android:id="@+id/tv_shift_transaction_id"
                    android:layout_below="@+id/tv_shift_id_label"
                    style="?attr/llsdk_transactionDetails_detailValueLongTextStyle" />
            </RelativeLayout>

            <RelativeLayout style="@style/llsdk_transaction_details_holder"
                android:id="@+id/rl_transaction_id"
                android:visibility="gone">

                <View
                    android:id="@+id/strut_transaction_id"
                    style="@style/llsdk_strutStyle" />

                <TextView
                    style="?attr/llsdk_transactionDetails_detailLabelTextStyle"
                    android:layout_toLeftOf="@+id/strut_transaction_id"
                    android:text="@string/transaction_details_id" />

                <TextView
                    android:id="@+id/tv_transaction_id"
                    style="?attr/llsdk_transactionDetails_detailValueTextStyle"
                    android:layout_toRightOf="@+id/strut_transaction_id" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_transfers_header"
                style="?attr/llsdk_transactionDetails_detailHeaderTextStyle"
                android:text="@string/transaction_details_transfers"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/adjustments_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</com.shiftpayments.link.sdk.ui.views.card.TransactionDetailsView>