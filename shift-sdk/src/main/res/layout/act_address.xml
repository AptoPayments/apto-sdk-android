<?xml version="1.0" encoding="utf-8"?>
<com.shift.link.sdk.ui.views.userdata.AddressView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_llsdk_toolbar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/abl_toolbar_wrapper"
            android:layout_above="@+id/dsw_stepper">

        <LinearLayout
                style="?attr/llsdk_dataContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_address"
                    style="?attr/llsdk_idVerification_inputWrapperStyle"
                    android:theme="?attr/llsdk_idVerification_inputWrapperTheme"
                    android:hint="@string/address_address_hint"
                    android.support.design:hintEnabled="true"
                    android.support.design:hintAnimationEnabled="true"
                    android:nextFocusUp="@id/til_address"
                    android:nextFocusLeft="@id/til_address">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_address"
                        style="?attr/llsdk_idVerification_editTextStyle"
                        android:inputType="textPostalAddress"
                        android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_apartment_number"
                    style="?attr/llsdk_idVerification_inputWrapperStyle"
                    android:theme="?attr/llsdk_idVerification_inputWrapperTheme">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_apartment_number"
                        style="?attr/llsdk_idVerification_editTextStyle"
                        android:inputType="text"
                        android:singleLine="true"
                        android:hint="@string/address_apartment_number_hint" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_city"
                    style="?attr/llsdk_idVerification_inputWrapperStyle"
                    android:theme="?attr/llsdk_idVerification_inputWrapperTheme">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_city"
                        style="?attr/llsdk_idVerification_editTextStyle"
                        android:inputType="text"
                        android:singleLine="true"
                        android:hint="@string/address_city_hint" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Design.Hint"
                            android:textColor="?android:textColorHint"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:text="@string/address_state_hint" />

                    <Spinner
                            android:id="@+id/sp_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nextFocusDown="@+id/et_zip_code"
                            android:nextFocusRight="@+id/et_zip_code" />

                    <TextView
                            android:id="@+id/tv_state_spinner_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            style="@style/llsdk_error_text" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_zip_code"
                        style="?attr/llsdk_idVerification_inputWrapperStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:theme="?attr/llsdk_idVerification_inputWrapperTheme">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_zip_code"
                            style="?attr/llsdk_idVerification_editTextStyle"
                            android:inputType="phone"
                            android:maxLength="@integer/zip_code_length"
                            android:paddingTop="16dp"
                            android:singleLine="true"
                            android:hint="@string/address_zip_code_hint" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_progress_bar" />
    <include layout="@layout/include_rl_loading" />

</com.shift.link.sdk.ui.views.userdata.AddressView>
