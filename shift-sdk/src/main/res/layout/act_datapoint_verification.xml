<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.verification.VerificationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pinview="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_llsdk_toolbar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/abl_toolbar_wrapper"
            android:layout_above="@+id/tv_next_bttn">

        <RelativeLayout
            style="?attr/llsdk_dataContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_verification_code_header"
                style="@style/llsdk_form_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"
                android:text="@string/verification_code_hint" />

            <TextView
                android:id="@+id/tv_verification_datapoint_label"
                style="@style/llsdk_form_field"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/tv_verification_code_header"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />

            <com.dpizarro.pinview.library.PinView
                android:id="@+id/pinView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                pinview:sizeSplit="8dp"
                pinview:drawablePinBox="@drawable/pin_box"
                pinview:numberPinBoxes="6"
                pinview:keyboardMandatory="false"
                pinview:password="false"
                android:layout_below="@+id/tv_verification_datapoint_label"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_resend_bttn"
                style="@style/llsdk_form_text_link"
                android:layout_below="@+id/pinView"
                android:layout_marginTop="60dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_centerHorizontal="true"
                android:text="@string/verification_button_resend" />

        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/include_rl_loading" />

</com.shiftpayments.link.sdk.ui.views.verification.VerificationView>
