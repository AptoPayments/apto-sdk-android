<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.card.ManageAccountView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/settings_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/settings_toolbar">

        <TextView
            android:id="@+id/tv_support_header"
            style="?attr/llsdk_cardSettings_sectionTitleTextStyle"
            android:text="@string/support_label" />

        <ImageView
            android:id="@+id/iv_help_center_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_support_header"
            android:paddingTop="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_settings_help"/>

        <TextView
            android:id="@+id/tv_contact_support"
            android:layout_below="@+id/tv_support_header"
            android:layout_toRightOf="@+id/iv_help_center_icon"
            android:text="@string/account_management_contact_support"
            style="@style/llsdk_main_item_light"/>

        <TextView
            android:id="@+id/tv_contact_support_description"
            style="@style/llsdk_item_description"
            android:layout_below="@+id/tv_contact_support"
            android:layout_toRightOf="@+id/iv_help_center_icon"
            android:text="@string/account_management_contact_support_description"/>

        <ImageView
            android:id="@+id/iv_faq_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/tv_contact_support_description"
            android:src="@drawable/ic_settings_faqs"/>

        <TextView
            android:id="@+id/tv_faq"
            android:layout_below="@+id/tv_contact_support_description"
            android:layout_toRightOf="@+id/iv_faq_icon"
            android:text="@string/account_management_faq"
            style="@style/llsdk_main_item_light"/>

        <TextView
            android:id="@+id/tv_faq_description"
            style="@style/llsdk_item_description"
            android:layout_below="@+id/tv_faq"
            android:layout_toRightOf="@+id/iv_faq_icon"
            android:text="@string/account_management_faq_description"/>

        <ImageView
            android:id="@+id/iv_sign_out_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/tv_faq_description"
            android:src="@drawable/ic_settings_logout"/>

        <TextView
            android:id="@+id/tv_sign_out"
            android:layout_marginTop="36dp"
            style="@style/llsdk_title"
            android:layout_below="@+id/tv_faq_description"
            android:layout_toRightOf="@+id/iv_sign_out_icon"
            android:text="@string/sign_out" />
    </RelativeLayout>
</com.shiftpayments.link.sdk.ui.views.card.ManageAccountView>
