<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.userdata.HomeView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/include_llsdk_toolbar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/abl_toolbar_wrapper"
            android:layout_above="@+id/dsw_stepper">

        <LinearLayout
                style="?attr/llsdk_dataContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_zip_code"
                style="?attr/llsdk_idVerification_inputWrapperStyle"
                android:theme="?attr/llsdk_idVerification_inputWrapperTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_zip_code"
                    style="?attr/llsdk_idVerification_editTextStyle"
                    android:inputType="number"
                    android:maxLength="@integer/zip_code_length"
                    android:paddingTop="16dp"
                    android:hint="@string/address_zip_code_hint"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/sp_housing_type"
                    android:nextFocusRight="@+id/sp_housing_type"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_housing_type_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Design.Hint"
                        android:textColor="?android:textColorHint"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:text="@string/address_housing_type_header" />

                <Spinner
                        android:id="@+id/sp_housing_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/tv_housing_type_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/llsdk_error_text"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/address_housing_type_error" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_progress_bar" />
    <include layout="@layout/include_rl_loading" />

</com.shiftpayments.link.sdk.ui.views.userdata.HomeView>
