<?xml version="1.0" encoding="utf-8"?>
<com.shiftpayments.link.sdk.ui.views.userdata.HomeView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android.support.design="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_llsdk_toolbar" />

    <!-- Dummy to get focus on start. -->
    <RelativeLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    <LinearLayout
            style="?attr/llsdk_dataContainerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/address_label"
            style="@style/llsdk_form_label" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_address"
            style="?attr/llsdk_idVerification_inputWrapperStyle"
            android:theme="?attr/llsdk_idVerification_inputWrapperTheme"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/actv_address"
                style="@style/llsdk_form_field_wide"
                android:inputType="none"
                android:background="@android:color/transparent"
                android:hint="@string/address_autocomplete_hint"
                android:nextFocusDown="@+id/sp_housing_type"
                android:nextFocusRight="@+id/sp_housing_type"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_housing_type_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Design.Hint"
                    android:textColor="?android:textColorHint"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/address_housing_type_header" />

            <Spinner
                    android:id="@+id/sp_housing_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/tv_housing_type_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/llsdk_error_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/address_housing_type_error" />

        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/include_progress_bar" />
    <include layout="@layout/include_rl_loading" />

</com.shiftpayments.link.sdk.ui.views.userdata.HomeView>
